@using CKD.DataAccess.Models
@model IEnumerable<EngineType>
@{
    ViewData["Title"] = "Index";
    int i = 0;
    i++;
}


<div class="row">
    <div class="col-4">
        <h1 class="my-1 mx-2">All Engine Types</h1>
    </div>
    <div class="col-5 text-info">
        <h4>@TempData["message"]</h4>
    </div>
    <div class="col-3">
        <a asp-controller="EngineType" asp-action="Create" class="btn btn-outline-primary">
            <i class="bi bi-plus-circle"></i>
            Create New Engine Type
        </a>
    </div>
</div>

<table class="table table-striped border">
    <thead class="table-dark">
        <tr class="text-center">
            <th>#</th>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>Operation</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="text-center row2">
                <th>@i</th>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td class="">
                    <a asp-controller="EngineType" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-success">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-controller="EngineType" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                        <i class="bi bi-trash3"></i>
                    </a>
                </td>
            </tr>
            i++;
        }
    </tbody>
</table>