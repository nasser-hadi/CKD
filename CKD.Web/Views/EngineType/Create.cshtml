@using CKD.Web.ViewModels
@model EngineTypeViewModel
@{
    ViewData["Title"] = "Create";
}



<div class="container-fluid border shadow">
    <div class="row">
        <div class="col-4">
            <h2 class="my-2 mx-2">Create new Engine Type</h2>
        </div>
        <div class="col-6 text-info">
            <h4>@TempData["message"]</h4>
        </div>
        <div class="col-2">
        </div>
    </div>

    <hr />

    <form asp-action="Create">

        <div class="row my-3">
            <div class="col-1">
            </div>
            <div class="col-6 form-floating">
                <input asp-for="Name" class="form-control px-3" aria-required="" placeholder="" />
                <label asp-for="Name" class="mx-3"></label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="row my-3">
            <div class="col-1"></div>
            <div class="col-3">
                <a asp-controller="EngineType" asp-action="Index" class="btn btn-outline-secondary form-control">
                    <i class="bi bi-backspace"></i>
                    Back
                </a>
            </div>
            <div class="col-3">
                <button asp-controller="EngineType" asp-action="Create" type="submit" class="btn btn-outline-primary form-control">
                    <i class="bi bi-plus-circle"></i>
                    Create
                </button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        // await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
