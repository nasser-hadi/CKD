@using CKD.Web.ViewModels
@model ProductViewModel

<div class="container border shadow">
    <div class="row">
        <div class="col-4">
            <h1 class="">Edit exist Product</h1>
        </div>
        <div class="col-6 text-info">
            <h4>@TempData["message"]</h4>
        </div>
        <div class="col-2">
        </div>
    </div>

    <hr />

    <div class="row ">
        <div class="col-8">
            <form method="post" enctype="multipart/form-data">
                <div class="row form-group my-4">
                    <div class="col-3">
                        <label asp-for="Id" class=""></label>
                    </div>
                    <div class="col-7 ">
                        <input asp-for="Id" readonly class="form-control" />
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                </div>
                <div class="row form-group my-4">
                    <div class="col-3">
                        <label asp-for="Version" class=""></label>
                    </div>
                    <div class="col-7 ">
                        <input asp-for="Version" readonly class="form-control" />
                        <span asp-validation-for="Version" class="text-danger"></span>
                    </div>
                </div>

                <div class="row form-group my-4">
                    <div class="col-3">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-7 ">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="row form-group my-4">
                    <div class="col-3">
                        <label asp-for="Notes"></label>
                    </div>
                    <div class="col-7 ">
                        <input asp-for="Notes" class="form-control" />
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>
                </div>

                <div class="row form-group my-4">
                    <div class="col-3">
                        <label asp-for="EngineType" class=""></label>
                    </div>
                    <div class="col-7 ">
                        <input asp-for="EngineType" class="form-control" />
                        <span asp-validation-for="EngineType" class="text-danger"></span>
                    </div>
                </div>

                <div class="row form-group my-4">
                    <div class="col-3">
                        <label asp-for="Usage" class=""></label>
                    </div>
                    <div class="col-7">
                        <input asp-for="Usage" class="form-control" />
                        <span asp-validation-for="Usage" class="text-danger"></span>
                    </div>
                </div>

                <div class="row form-group my-4">
                    <div class="col-3">
                        <label asp-for="@Model.NewImage"></label>
                    </div>
                    <div class="col-7">
                        <input asp-for="@Model.OldImage"  hidden  class="form-control" />
                        <input asp-for="@Model.NewImage" type="file" name="fileUpload" id="fileUpload" class="form-control" />
                        <span asp-validation-for="@Model.NewImage" class="text-danger"></span>
                    </div>
                </div>

                <div class="row my-4">
                    <div class="col-3"></div>
                    <div class="col-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary form-control">
                            <i class="bi bi-backspace"></i>
                            Back
                        </a>
                    </div>
                    <div class="col-4">
                        <button asp-controller="Product" asp-action="Edit" type="submit" class="btn btn-outline-success form-control">
                            <i class="bi bi-pencil"></i>
                            Edit
                        </button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-4">
            <img src="@Model.OldImage" style="width:250px;height:350px;" />
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}