@using CKD.Web.ViewModels
@model IEnumerable<ProductViewModel>

@{
    ViewData["Title"] = "Index";
    int i = 0;
    i++;
}

<div class="row">
    <div class="col-4">
        <h1 class="">Product List</h1>
    </div>
    <div class="col-6 text-info">
        <h4>@TempData["Message"]</h4>
    </div>
    <div class="col-2">
        <a asp-controller="Product" asp-action="Create" class="btn btn-outline-primary">
            <i class="bi bi-plus-circle"></i>
            Create New Product
        </a>
    </div>
</div>

<table class="table table-striped border">
    <thead class="table-dark">
        <tr class="text-center">
            <th>#</th>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Version)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EngineType)
            </th>
            <th>Operation</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="text-center">
                <th>@i</th>
                <td>@item.Id</td>
                <td>@item.Version</td>
                <td>@item.Name</td>
                <td>@item.Notes</td>
                <td>@item.EngineType</td>
                <td>
                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-success">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-controller="Product" asp-action="" asp-route-id="@item.Id" class="btn btn-outline-danger disabled">
                        <i class="bi bi-trash3"></i>
                    </a>
                    <a asp-controller="ProductPart" asp-action="AddProductPart" asp-route-id="@item.Id" class="btn btn-outline-primary">
                        <i class="bi bi-plus-lg"></i>
                        Part
                    </a>
                </td>
            </tr>
            i++;
        }
    </tbody>
</table>
