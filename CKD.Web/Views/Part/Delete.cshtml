@model CKD.Web.ViewModels.PartViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container border shadow">
    <div class="row">
        <div class="col-4">
            <h1 class="">Delete this Part</h1>
        </div>
        <div class="col-6 text-info">
            <h4>@TempData["message"]</h4>
        </div>
        <div class="col-2">
        </div>
    </div>

    <hr />

    <div class="row form-group my-4">
        <div class="col-2">
            <label asp-for="Id" class=""></label>
        </div>
        <div class="col-6 ">
            <input asp-for="Id" readonly class="form-control" />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
    </div>
    <div class="row form-group my-4">
        <div class="col-2">
            <label asp-for="Version" class=""></label>
        </div>
        <div class="col-6 ">
            <input asp-for="Version" readonly class="form-control" />
            <span asp-validation-for="Version" class="text-danger"></span>
        </div>
    </div>

    <div class="row form-group my-4">
        <div class="col-2">
            <label asp-for="FarsiName"></label>
        </div>
        <div class="col-6 ">
            <input asp-for="FarsiName" readonly class="form-control" />
            <span asp-validation-for="FarsiName" class="text-danger"></span>
        </div>
    </div>

    <div class="row form-group my-4">
        <div class="col-2">
            <label asp-for="EnglishName" class=""></label>
        </div>
        <div class="col-6 ">
            <input asp-for="EnglishName" readonly class="form-control disabled" />
            <span asp-validation-for="EnglishName" class="text-danger"></span>
        </div>
    </div>

    <div class="row form-group my-4">
        <div class="col-2">
            <label asp-for="IsSet"></label>
        </div>
        <div class="col-6 form-group form-check">
            <input asp-for="IsSet" hidden value="false" id="flexCheckDefault" />
            <input asp-for="IsSet" type="checkbox" readonly class="form-check-input disabled" value="true" id="flexCheckDefault" />
            <label asp-for="IsSet" class="form-check-label">Part is Set?</label>
            <span asp-validation-for="IsSet" class="text-danger"></span>
        </div>
    </div>

    <form asp-action="Delete">
        <div class="row my-4">
            <input type="hidden" asp-for="Id" />
            <div class="col-2"></div>
            <div class="col-3">
                <a asp-controller="Part" asp-action="Index" class="btn btn-outline-secondary form-control">
                    <i class="bi bi-backspace"></i>
                    Back
                </a>
            </div>
            <div class="col-3">
                <button asp-controller="Part" asp-action="Delete" type="submit" onclick="return confirm('Are you sure you want to delete this Part?')" class="btn btn-outline-danger form-control">
                    <i class="bi bi-trash3"></i>
                    Delete
                </button>
            </div>
        </div>
    </form>
</div>
