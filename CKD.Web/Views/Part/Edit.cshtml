@using CKD.Web.ViewModels
@model PartViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container border shadow">
    <div class="row">
        <div class="col-4">
            <h2 class="my-2 mx-2">Edit exist Part</h2>
        </div>
        <div class="col-6 text-info">
            <h4>@TempData["message"]</h4>
        </div>
        <div class="col-2">
        </div>
    </div>

    <hr />

    <form method="post">
        <div class="row my-3">
            <div class="col-1">
            </div>
            <div class="col-6 form-floating">
                <input asp-for="Id" readonly class="form-control px-3" />
                <label asp-for="Id" class="mx-3"></label>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
        </div>

        <div class="row my-3">
            <div class="col-1">
            </div>
            <div class="col-6 form-floating">
                <input asp-for="Version" readonly class="form-control px-3" />
                <label asp-for="Version" class="mx-3"></label>
                <span asp-validation-for="Version" class="text-danger"></span>
            </div>
        </div>

        <div class="row my-3">
            <div class="col-1">
            </div>
            <div class="col-6 form-floating">
                <input asp-for="FarsiName" class="form-control px-3" />
                <label asp-for="FarsiName" class="mx-3"></label>
                <span asp-validation-for="FarsiName" class="text-danger"></span>
            </div>
        </div>

        <div class="row my-3">
            <div class="col-1">
            </div>
            <div class="col-6 form-floating">
                <input asp-for="EnglishName" class="form-control px-3" />
                <label asp-for="EnglishName" class="mx-3"></label>
                <span asp-validation-for="EnglishName" class="text-danger"></span>
            </div>
        </div>

        <div class="row my-3">
            <div class="col-1">
                @* <label asp-for="IsSet"></label> *@
            </div>
            <div class="col-6 form-check">
                <input asp-for="IsSet" hidden value="false" id="flexCheckDefault" />
                <input asp-for="IsSet" type="checkbox" class="form-check-input mx-1" value="true" id="flexCheckDefault" />
                <label asp-for="IsSet" class="form-check-label mx-3">Part is a Set?</label>
                <span asp-validation-for="IsSet" class="text-danger"></span>
            </div>
        </div>

        <div class="row my-3">
            <div class="col-1"></div>
            <div class="col-3">
                <a asp-controller="Part" asp-action="Index" class="btn btn-outline-secondary form-control">
                    <i class="bi bi-backspace"></i>
                    Back
                </a>
            </div>
            <div class="col-3">
                <button asp-controller="Part" asp-action="Edit" type="submit" class="btn btn-outline-success form-control">
                    <i class="bi bi-pencil"></i>
                    Edit
                </button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}