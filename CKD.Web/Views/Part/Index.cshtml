@using CKD.Web.ViewModels
@model IEnumerable<PartViewModel>

@{
    ViewData["Title"] = "Index";
    int i = 0;
    i++;
}

<div class="row">
    <div class="col-4">
        <h1 class="">All available Parts</h1>
    </div>
    <div class="col-6 text-info">
        <h4>@TempData["message"]</h4>
    </div>
    <div class="col-2">
        <a asp-controller="Part" asp-action="Create" class="btn btn-outline-primary">
            <i class="bi bi-plus-circle"></i>
            Create New Part
        </a>
    </div>
</div>

<table class="table table-striped border">
    <thead class="table-dark">
        <tr class="text-center">
            <th>#</th>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Version)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FarsiName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnglishName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsSet)
            </th>
            <th>Operation</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="text-center row2">
                <th>@i</th>
                <td>@item.Id</td>
                <td>@item.Version</td>
                <td>@item.FarsiName</td>
                <td>@item.EnglishName</td>
                <td>
                    <input class="form-check-input" type="checkbox" disabled="disabled" @(item.IsSet ? "checked" : "") />
                </td>
                @* <td class="d-flex justify-content-start"> *@
                <td class="">
                    <a asp-controller="Part" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-success">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-controller="Part" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                        <i class="bi bi-trash3"></i>
                    </a>
                    @if (item.IsSet == true)
                    {
                        <a asp-controller="Set" asp-action="AddSetPart" asp-route-Id="" data-bs-toggle="tooltip" title="Add new Part to this Set." class="btn btn-outline-primary ">
                            <i class="bi bi-plus-lg"></i>
                        </a>
                    }
                </td>
            </tr>
            i++;
        }
    </tbody>
</table>

